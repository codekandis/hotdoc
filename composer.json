{
	"name": "codekandis/hotdoc",
	"description": "`codekandis/hotdoc` is a web applictaion to render and display folder structured markdown documents as HTML documents.",
	"keywords": [
		"php",
		"hotdoc",
		"markdown",
		"html",
		"documents"
	],
	"minimum-stability": "stable",
	"prefer-stable": true,
	"license": "MIT",
	"authors": [
		{
			"name": "Christian Ramelow",
			"email": "info@codekandis.net",
			"homepage": "http://codekandis.net",
			"role": "Developer"
		}
	],
	"support": {
		"email": "info@codekandis.net",
		"issues": "https://github.com/codekandis/hotdoc/issues",
		"docs": "https://github.com/codekandis/hotdoc/blob/master/README.md",
		"source": "https://github.com/codekandis/hotdoc/tree/master"
	},
	"require": {
		"php": "^7.4",
		"benjaminhoegh/parsedown-toc": "^1",
		"codekandis/authentication": "^0",
		"codekandis/configurations": "^0",
		"codekandis/constants-classes-translator": "^1",
		"codekandis/converters": "^0",
		"codekandis/persistence": "^0",
		"codekandis/sentry-client": "^1",
		"codekandis/session": "^0",
		"codekandis/tiphy": "^0",
		"codekandis/tiphy-authentication-integration": "^0",
		"codekandis/tiphy-persistence-integration": "^0",
		"codekandis/tiphy-sentry-client-integration": "^0",
		"codekandis/tiphy-session-integration": "^0",
		"codekandis/validators": "^0",
		"erusev/parsedown-extra": "^0",
		"fortawesome/font-awesome": "^5"
	},
	"require-dev": {
		"roave/security-advisories": "dev-master",
		"codekandis/phpunit": "^3"
	},
	"autoload": {
		"psr-4": {
			"CodeKandis\\HotDoc\\": [
				"public/",
				"src/"
			],
			"CodeKandis\\HotDoc\\Configurations\\Plain\\": [
				"config/"
			]
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CodeKandis\\HotDoc\\Tests\\": [
				"tests/"
			]
		}
	}
}
